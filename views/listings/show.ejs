<% layout("/layouts/boilerplate")%>
<body>
    <h3><%= listing.title %> nestled in <%= listing.location %></h3>
    <p><%= listing.description %></p>
    
    <p><b>Activities:</b></p>
    <ul>
        <% for (let activity of listing.activities) { %>
            <li><%= activity %></li>
        <% } %>
    </ul>
    
    <p><b>Best Time to Visit:</b> <%= listing.bestTimeToVisit %></p>
    
    <p><b>Travel Tips:</b></p>
    <ul>
        <% for (let tip of listing.tips) { %>
            <li><%= tip %></li>
        <% } %>
    </ul>
    <form method="GET" action="/listings/new">
        <button  class="btn btn-primary"style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
        type="submit">
            Add Trip
        </button>
    </form>
</body>

